<div id="page-group">
  <section>
    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-md-3">    
          <div class="sidebar">
            <% if @page.parent %>
              <% content_for :javascripts do %>
                <script type="text/javascript">
                  $('#about .sidebar ul').addClass('list-unstyled');
                </script>
              <% end %>
              <% 
                submenu              = page_group_menu(@page)
                submenu.dom_id       = "page-sub-nav"
                #submenu.css          = "nav menu clearfix sub-nav affix-container"
                submenu.selected_css = "active"
              %>
              <%= submenu.to_html -%>
            <% end %>
          </div>    	   
    	  </div>
    	  <div class="col-sm-8 col-md-9">
          <h1 class="glass-edit" data-glass-options='{"form_id": "page_title"}' glass-placeholder="Title"><%= @page.title %></h1>
          <%= render partial: '/glass/page_content' %>
          <%= yield :extra_page_content %>
    	  </div>
      </div>
    </div>
  </section>
</div>
