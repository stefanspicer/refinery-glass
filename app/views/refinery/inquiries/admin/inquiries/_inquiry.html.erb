<li class='page-listing' id="<%= dom_id(inquiry) -%>">
  <div class="page-row">

    <i class="gcicon gcicon-file"></i>&nbsp;
    <a href="<%= refinery.inquiries_admin_inquiry_path(inquiry) %>" class="page-title">
      <span>
        <%= inquiry.name %> <%= t('.said') %>:
      </span>
      &nbsp;
      <span class="preview"><%= truncate(strip_tags(sanitize(inquiry.message)), :length => 60) -%></span>
    </a>

    <span class='actions actions-col-2'>

      <span class="delete">
        <%= render 'refinery/admin/glass/delete_button',
                   css_class: 'cancel confirm-delete circle-icon',
                   delete_url: refinery.inquiries_admin_inquiry_path(inquiry),
                   after_delete_url: refinery.inquiries_admin_inquiries_path,
                   confirm_text: 'Are you sure you want to delete this Inquiry?',
                   delete_btn_text: '<i class="gcicon gcicon-trash"></i>'
        -%>
      </span>

      <span class="spam-filter">
        <% if inquiry.spam? %>
          <%= link_to '<i class="gcicon gcicon-check"></i>'.html_safe, refinery.toggle_spam_inquiries_admin_inquiry_path(inquiry),
                      :title => t('hello?'), :class => 'circle-icon' -%>
        <% else %>
          <%= link_to '<i class="gcicon gcicon-cancel"></i>'.html_safe, refinery.toggle_spam_inquiries_admin_inquiry_path(inquiry),
                      :title => t('.mark_as_spam'), :class => 'circle-icon' -%>
        <% end %>
      </span>
    </span>
  </div>
</li>
