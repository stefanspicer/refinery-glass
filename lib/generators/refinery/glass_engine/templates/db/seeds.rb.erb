Refinery::I18n.frontend_locales.each do |lang|
  I18n.locale = lang

  if defined?(Refinery::User)
    Refinery::User.all.each do |user|
      if user.plugins.where(:name => 'refinerycms-<%= namespacing.underscore %>').blank?
        user.plugins.create(:name => 'refinerycms-<%= namespacing.underscore %>',
                            :position => (user.plugins.maximum(:position) || -1) +1)
      end
    end
  end

<% unless skip_frontend? -%>
  uid = "<%= [(namespacing.underscore if namespacing.underscore != plural_name), plural_name, 'thank-you'].compact.join('-') %>"
  if defined?(Refinery::Page) && Refinery::Page.where(:identifier => uid).empty?
    page = Refinery::Page.create(
      :title => '<%= class_name.pluralize.underscore.titleize %>',
      :deletable => false
    )
    page.identifier = uid
    page.save
    Refinery::Pages.default_parts.each_with_index do |default_page_part, index|
      page.parts.create(:title => default_page_part, :body => nil, :position => index)
    end
  end
<% end -%>
end
